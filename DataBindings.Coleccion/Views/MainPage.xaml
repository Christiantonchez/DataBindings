<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataBindings.Coleccion.Views"
             xmlns:models="clr-namespace:DataBindings.Coleccion.Models"
             x:DataType="local:MainPage"
             x:Class="DataBindings.Coleccion.Views.MainPage"
             Title="MainPage"
             BackgroundColor="Beige">
    <Grid
        RowDefinitions="Auto,*, *"
        Padding="16"
        RowSpacing="12">

        <Grid
            ColumnDefinitions="*, auto, auto"
            ColumnSpacing="4">
            <Label
                Text="Origenes de paquete"
                VerticalOptions="Center"/>
            <Button
                Grid.Column="1"
                Text="+"
                BackgroundColor="White"
                TextColor="Green"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnAddButtonClicked">
                
            </Button>

            <Button
                Grid.Column="2"
                Text="X"
                BackgroundColor="White"
                TextColor="Red"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnRemoveButtonClicked">

            </Button>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Gray"
            SelectionMode="Single"
            EmptyView="No se ha agregado ningun origend de paquete"
            SelectedItem="{Binding Path=OrigenSeleccionado}"
            ItemsSource="{Binding Path =Origenes}"
            SelectionChanged="OriginesListView_SelectionChanged">
                    <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="{x:Type models:OrigenDelPaquete}">
                <Grid
                    RowDefinitions="auto, *"
                    ColumnDefinitions="auto, auto"
                    >
                    <CheckBox
                        Grid.RowSpan="2"
                        IsChecked="{Binding EstaHabilitado}"
                        VerticalOptions="Center">


                    </CheckBox>

                        <Label
                        Grid.Column="1"
                        Text="{Binding Nombre}"/>



                        <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding Origen}"/>
                    


                </Grid>

            </DataTemplate>


            </CollectionView.ItemTemplate>
        </CollectionView>


        <Grid
            RowSpacing="8"
            ColumnSpacing="8"
            Grid.Row="2"
            RowDefinitions="auto, auto"
            ColumnDefinitions="auto, *, auto">
            <Label
                Text="Nombre: "
                VerticalOptions="Center"/>


            <Entry
                Grid.Column="1"
                BackgroundColor="White"
                Text="{Binding Path=NombreDelOrigen}"
                />



            <Label
                Grid.Row="1"
                Text="Origen"
                VerticalOptions="Center"/>



            <Entry
                Text="{Binding Path=RutaDelOrigen}"
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"/>

            <Button
               Grid.Row="1"
               Grid.Column="2"
                Text="Actualizar"
                BackgroundColor="White"
                TextColor="Black"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnActualizarButtonClicked"/>

        </Grid>

    </Grid>
</ContentPage>