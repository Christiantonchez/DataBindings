<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.ElementoXAML.MainPage">

    <VerticalStackLayout>
        <Border 
            Stroke="Gray" 
            Margin="16" 
            Padding="16">
            <VerticalStackLayout>
                <Label 
                    Text="Escribe un Texto">
                    
                    
                </Label>
                <Entry 
                    BackgroundColor="LightGray" 
                    Text="" 
                    
                    
                    x:Name="textEntry">
                    
                </Entry>
            </VerticalStackLayout>
            
        </Border>
        <VerticalStackLayout Margin="16" Padding="16">
            <Label Text="Aqui se ve lo que está escribiendo">
                
            </Label>
            <Label Text="{Binding Source={x:Reference textEntry}, Path=Text }"  
                   Padding="0.38" 
                   HorizontalOptions="Center" 
                   FontAttributes="Italic" >
                
            </Label>
        </VerticalStackLayout>
        
    </VerticalStackLayout>


</ContentPage>
