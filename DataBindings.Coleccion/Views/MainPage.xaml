<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindings.Coleccion.Views.MainPage"
             Title="MainPage"
             BackgroundColor="Beige">
    <Grid
        RowDefinitions="Auto,*, *"
        Padding="16"
        RowSpacing="12">

        <Grid
            ColumnDefinitions="*, auto, auto"
            ColumnSpacing="4">
            <Label
                Text="Origenes de paquete"
                VerticalOptions="Center"/>
            <Button
                Grid.Column="1"
                Text="+"
                BackgroundColor="White"
                TextColor="Green"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnAddButtonClicked">
                
            </Button>

            <Button
                Grid.Column="2"
                Text="X"
                BackgroundColor="White"
                TextColor="Red"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnRemoveButtonClicked">

            </Button>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Gray"
            SelectionMode="Single"

            x:Name="OriginesListView"
            
            SelectionChanged="OriginesListView_SelectionChanged"/>


        <Grid
            RowSpacing="8"
            ColumnSpacing="8"
            Grid.Row="2"
            RowDefinitions="auto, auto"
            ColumnDefinitions="auto, *, auto">
            <Label
                Text="Nombre: "
                VerticalOptions="Center"/>


            <Entry
                Grid.Column="1"
                BackgroundColor="White"
                x:Name="NombreEntry"
                />



            <Label
                Grid.Row="1"
                Text="Origen"
                VerticalOptions="Center"/>



            <Entry
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                x:Name="OrigenEntry"/>

            <Button
               Grid.Row="1"
               Grid.Column="2"
                Text="Actualizar"
                BackgroundColor="White"
                TextColor="Black"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnActualizarButtonClicked"/>

        </Grid>

    </Grid>
</ContentPage>